<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.ale.rainbowx.rainbowavatar.AvatarCardView
        android:id="@+id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:avatarDimension="large"
        app:avatarResolution="high"
        app:avatarShape="square"
        app:avatarRadius="20dp"
        app:presenceDimension="medium"
        app:presencePosition="bottom_left"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/user_avatar"
        app:layout_constraintEnd_toStartOf="@id/delete_avatar"
        app:layout_constraintTop_toBottomOf="@id/user_avatar"
        app:icon="@drawable/baseline_edit_24"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/edit_avatar"
        app:layout_constraintEnd_toEndOf="@id/user_avatar"
        app:layout_constraintTop_toBottomOf="@id/user_avatar"
        app:icon="@drawable/baseline_clear_24"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/delete_avatar"
        app:layout_constraintBottom_toTopOf="@id/change_password">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="FirstName"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Last name"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nick name"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Company"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/change_your_password"
        android:layout_marginBottom="16dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:lottie_rawRes="@raw/loading_animation"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>