<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/contact"
            />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/call_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_view_photo"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/call_audio_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/bt_call_audio"/>

        <ImageView
            android:id="@+id/call_video_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button"
            android:layout_weight="1"
            android:src="@drawable/bt_answercall_video_active"/>

    </LinearLayout>

</RelativeLayout>